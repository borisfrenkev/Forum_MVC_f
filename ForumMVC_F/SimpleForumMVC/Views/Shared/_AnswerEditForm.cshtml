@using SimpleForumMVC.Models
@model AnswerSubmitModel
@using (Ajax.BeginForm("EditAnswer", "Answer",
    new AjaxOptions
    {
        InsertionMode = InsertionMode.Replace,
        HttpMethod = "Post",
        UpdateTargetId =@Model.AnswerTargetId,
        OnFailure = "answerPostFailure"
    }

))
{
    <div class="control-group">
        @Html.LabelFor(model => model.AnswerContent, new { @class = "control-label" })
        <div class="controls">
            @Html.EditorFor(model => model.AnswerContent)
            @Html.ValidationMessageFor(model => model.AnswerContent, null, new { @class = "help-inline" })
        </div>
    </div>

    @Html.HiddenFor(model => model.AnswerId)
    <input type="submit" value="Submit Answer" />
    @Html.ActionLink("Cancel", "Details", "Question", new { id = Model.QuestionId }, null)
}
